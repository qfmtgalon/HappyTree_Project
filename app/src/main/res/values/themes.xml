<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyTree" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#018786</item>
        <item name="colorPrimaryVariant">#ADE792</item>
        <item name="colorOnPrimary">#6ECCAF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/button</item>
    </style>

    <style name="Theme.HappyTree.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    //CardView
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    //Buttons
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:ems">12</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">8dp</item>
    </style>

    //Text Button
    <style name="textButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    //TextView
    // TextView
    <style name="titleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">50dp</item>
    </style>
    <style name="subheading" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorSecondaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Theme.HappyTree.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HappyTree.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>