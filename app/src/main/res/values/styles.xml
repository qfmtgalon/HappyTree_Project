<resources>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:ems">15</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">7dp</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimaryContainer</item>
        <item name="itemIconTint">@color/colorPrimaryVariant</item>
        <item name="itemTextColor">@color/colorOnPrimaryContainer</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryContainer</item>
        <item name="android:textColor">@color/colorOnPrimaryContainer</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:ems">15</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cardElevation">12dp</item>
        <item name="clickAction">toggle</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:ems">12</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="textButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="RegTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="subheading" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Add any other styles here -->

</resources>
